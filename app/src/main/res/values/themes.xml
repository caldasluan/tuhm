<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tuhm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Tuhm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tuhm.Splash" parent="Theme.Tuhm.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/background_splash</item>
    </style>

    <style name="Theme.Tuhm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tuhm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App.Divider" parent="Theme.Tuhm">
        <item name="android:background">?colorOnSurface</item>
        <item name="android:alpha">.08</item>
    </style>
</resources>